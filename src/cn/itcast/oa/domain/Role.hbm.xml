<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="cn.itcast.oa.domain.Role" table="itcast_role">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name" length="64" />
		<property name="description" length="255"/>
		<!-- 配置岗位和用户的多对多关系 -->
		<set name="users" table="itcast_user_role">
			<key column="roleId"></key>
			<many-to-many class="cn.itcast.oa.domain.User" column="userId"></many-to-many>
		</set>
		
		<!-- 配置角色和权限的多对多关系 -->
		<set name="privileges" table="itcast_role_privilege" lazy="false">
			<key column="roleId"/>
			<many-to-many class="cn.itcast.oa.domain.Privilege" column="privilegeId"/>
		</set>
	</class>
</hibernate-mapping>